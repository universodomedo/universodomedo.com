{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": { // para adicionar novos paths, tem que adicionar no tsconfig.json e no vite.config.ts
      "@consumer/*": ["ApiConsumer/*"],
      "@components/*": ["Components/*"],
      "@layouts/*": ["Layouts/*"],
      "@pages/*": ["Pages/*"],
      "@types/*": ["Types/*"],
      "@redux/*": ["Redux/*"],
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "strict": true,
    "traceResolution": true,
    "types": ["node"],
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src"]
  },
  "include": ["src/**/*"],
}
